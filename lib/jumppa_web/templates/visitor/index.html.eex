<h2>Listing Visitors</h2>

<table class="table">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Address</th>
      <th>Zip</th>
      <th>Municipality</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for visitor <- @visitors do %>
    <tr>
      <td><%= visitor.first_name %></td>
      <td><%= visitor.last_name %></td>
      <td><%= visitor.address %></td>
      <td><%= visitor.zip %></td>
      <td><%= visitor.municipality %></td>

      <td class="text-right">
        <span><%= link "Show", to: visitor_path(@conn, :show, visitor), class: "btn btn-default btn-xs" %></span>
        <span><%= link "Edit", to: visitor_path(@conn, :edit, visitor), class: "btn btn-default btn-xs" %></span>
        <span><%= link "Delete", to: visitor_path(@conn, :delete, visitor), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" %></span>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<span><%= link "New Visitor", to: visitor_path(@conn, :new) %></span>
